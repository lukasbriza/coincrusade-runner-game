{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NEXT_PUBLIC_GITHUB",
    "NEXT_PUBLIC_META_ROBOTS",
    "API_URL",
    "DATABASE_PORT",
    "DATABASE_NAME",
    "DATABASE_USERNAME",
    "DATABASE_PASSWORD",
    "DATABASE_URL",
    "NEXT_PUBLIC_MAIL",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**/*",
        "tsconfig.tsbuildinfo",
        "tsconfig.build.tsbuildinfo"
      ]
    },
    "lint": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".eslintcache"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".eslintchache"
      ]
    },
    "copy-fonts": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "node_modules/@lukasbriza/theme/static/fonts/**/*"
      ],
      "outputs": [
        "public/fonts/**/*",
        "static/fonts/**/*"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "^build",
        "copy-fonts"
      ],
      "persistent": true
    },
    "dev:frontend": {
      "cache": false,
      "dependsOn": [
        "^build",
        "copy-fonts"
      ],
      "persistent": true
    },
    "ts": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "tsconfig.tsbuildinfo"
      ]
    },
    "cleanup": {
      "cache": false
    },
    "run": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    }
  }
}